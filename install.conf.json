[
  {
    "defaults": {
      "link": {
        "relink": true,
	"create": true,
	"force": true
      }
    }
  },
  {
    "clean": ["~", "~/.config"]
  },
  {
    "link": {
      "~/.zshrc": null,
      "~/.Xresources": null,
      "~/.config/i3/config": {
      	"path": "i3/config"
      },
      "~/.config/polybar/config": {
        "path": "polybar/config"
      },
      "~/.i3blocks.conf": {
        "path": "i3/i3blocks.conf"
      },
      "~/.wallpaper.jpg": null,
      "~/.config/rofi/config": {
      	"path": "rofi/config"
      },
      "~/.vimrc": {
      	"path": "dotvim/vimrc"
      },
      "~/.fonts/fontawesome-webfront.ttf": {
        "path": "fontawesome-webfont.ttf"
      },
      "~/.compton.conf": null,

      "~/.lock.sh": null,
      "~/.pad.png": null
    }
  },
  {
    "shell": [
      ["git submodule update --init --recursive", "Installing submodules"]
    ]
  }
]
